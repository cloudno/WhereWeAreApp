<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/user_group"
        android:layout_width="50dp"
        android:layout_height="@dimen/activity_row_height"
        android:onClick="decreaseAmount" />
        <!--  android:src="@drawable/decrease_amount_fat" --> 

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

  
    <ImageView
        android:id="@+id/show_User"
        android:layout_width="32dp"
        android:layout_height="@dimen/activity_row_height"
        android:onClick="removeArticleHandler"
        android:src="@drawable/increase_amount" />

</LinearLayout>